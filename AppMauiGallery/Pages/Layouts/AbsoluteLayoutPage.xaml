<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Pages.Layouts.AbsoluteLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AbsoluteLayoutPage">

    <AbsoluteLayout>
        <Label
            AbsoluteLayout.LayoutBounds="150,0,100,40"
            BackgroundColor="DimGray"
            Text="Hello World!" />
        <Button
            AbsoluteLayout.LayoutBounds="0.5,400,200,60"
            AbsoluteLayout.LayoutFlags="XProportional"
            Text="Click me!" />
        <BoxView
            AbsoluteLayout.LayoutBounds="150,200"
            HeightRequest="50"
            WidthRequest="50"
            Color="IndianRed" />
        <BoxView
            AbsoluteLayout.LayoutBounds="175,225"
            HeightRequest="50"
            WidthRequest="50"
            Color="ForestGreen" />
        <BoxView
            AbsoluteLayout.LayoutBounds="200,250"
            HeightRequest="50"
            WidthRequest="50"
            Color="Yellow" />
        <BoxView
            AbsoluteLayout.LayoutBounds="225,275"
            HeightRequest="50"
            WidthRequest="50"
            Color="MediumBlue" />
        <BoxView
            AbsoluteLayout.LayoutBounds="250,300"
            HeightRequest="50"
            WidthRequest="50"
            Color="SandyBrown" />
    </AbsoluteLayout>

</ContentPage>