<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Pages.Forms.CheckBoxPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CheckBox Page">
    <VerticalStackLayout Padding="10">
        <Label
            HorizontalOptions="Start"
            Text="Quais são suas linguagens de programção preferidas?"
            VerticalOptions="Center" />
        <HorizontalStackLayout>
            <CheckBox
                CheckedChanged="CheckBox_CheckedChanged"
                IsChecked="False"
                Color="Blue" />
            <Label Text="C#" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox
                CheckedChanged="CheckBox_CheckedChanged"
                IsChecked="False"
                Color="Red" />
            <Label Text="JAVA" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox
                CheckedChanged="CheckBox_CheckedChanged"
                IsChecked="False"
                Color="Purple" />
            <Label Text="PYTHON" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <Label
            x:Name="lblStatus"
            HorizontalOptions="Start"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>