    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EntryCell Page">
    <VerticalStackLayout Padding="10">
        <TableView>
            <TableSection Title="Cadastro de colaboradores">
                <EntryCell
                    Label="INFO 1"
                    LabelColor="Green"
                    VerticalTextAlignment="Justify" />
                <EntryCell Label="INFO 2" LabelColor="Coral" />
                <EntryCell Label="INFO 3" LabelColor="Red" />
                <EntryCell
                    Keyboard="Telephone"
                    Label="INFO 4"
                    LabelColor="Blue" />
                <EntryCell
                    Keyboard="Numeric"
                    Label="INFO 5"
                    LabelColor="Purple" />
            </TableSection>
        </TableView>
    </VerticalStackLayout>
</ContentPage>