<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Cells.ViewCellPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ViewCell Page">
    <VerticalStackLayout>
        <TableView>
            <TableSection Title="Lista de Colaboradores">
                <ViewCell>
                    <HorizontalStackLayout>
                        <Image Source="unnamed.png" />
                        <VerticalStackLayout Padding="10,0,0,0">
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="COLABORADOR I"
                                TextColor="DarkBlue" />
                            <Label
                                Margin="0,6,0,0"
                                FontSize="12"
                                Text="Idade: 33 anos, Cargo: ANALISTA DE SISTEMAS"
                                TextColor="Gray" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </ViewCell>
                <ViewCell>
                    <HorizontalStackLayout>
                        <Image Source="unnamed.png" />
                        <VerticalStackLayout Padding="10,0,0,0">
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="COLABORADOR II"
                                TextColor="Purple" />
                            <Label
                                Margin="0,6,0,0"
                                FontSize="12"
                                Text="Idade: 43 anos, Cargo: ANALISTA DE REQUISITOS"
                                TextColor="Gray" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </ViewCell>
            </TableSection>
        </TableView>
    </VerticalStackLayout>
</ContentPage>