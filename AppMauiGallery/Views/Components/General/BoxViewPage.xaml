<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Components.General.BoxViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BoxViewPage">
    <VerticalStackLayout Padding="10">
        <BoxView HeightRequest="1" Color="DarkBlue" />
        <BoxView
            HeightRequest="100"
            WidthRequest="100"
            Color="IndianRed" />
        <BoxView
            HeightRequest="100"
            WidthRequest="200"
            Color="ForestGreen" />
        <BoxView
            CornerRadius="50"
            HeightRequest="100"
            WidthRequest="100"
            Color="BlueViolet" />
    </VerticalStackLayout>
</ContentPage>