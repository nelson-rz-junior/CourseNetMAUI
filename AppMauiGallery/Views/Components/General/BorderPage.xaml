<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Components.General.BorderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Border Page">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Border
            Padding="10"
            Stroke="DarkGreen"
            StrokeDashArray="1,1,3,1,5,2"
            StrokeDashOffset="1"
            StrokeLineCap="Round"
            StrokeLineJoin="Round"
            StrokeThickness="4">
            <Label
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" />
        </Border>
        <Border
            Padding="10"
            Stroke="DarkViolet"
            StrokeShape="RoundRectangle 5,10,15,20">
            <Label Text="Hello World!" />
        </Border>
    </VerticalStackLayout>
</ContentPage>