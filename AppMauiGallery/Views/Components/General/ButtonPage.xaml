<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Components.General.ButtonPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Button Page">
    <VerticalStackLayout>
        <HorizontalStackLayout
            Padding="10"
            HorizontalOptions="Center"
            Spacing="10"
            VerticalOptions="Start">
            <!--  Estilização padrão dos botões fica no arquivo "\Resources\Styles\Styles.xaml"  -->
            <Button
                BackgroundColor="White"
                BorderColor="Blue"
                BorderWidth="1"
                Clicked="Button_Clicked"
                ContentLayout="Left, 20"
                CornerRadius="22"
                FontAttributes="Bold"
                ImageSource="clock.png"
                Pressed="Button_Pressed"
                Released="Button_Released"
                Text="Clique-me"
                TextColor="Blue" />

            <Button
                BackgroundColor="White"
                BorderColor="Red"
                BorderWidth="1"
                Clicked="ClearButton_Clicked"
                CornerRadius="22"
                FontAttributes="Bold"
                Text="Clear Logs"
                TextColor="Red" />
        </HorizontalStackLayout>

        <Label x:Name="lblLog" Padding="10" />
    </VerticalStackLayout>
</ContentPage>