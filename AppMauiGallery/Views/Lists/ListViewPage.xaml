<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Lists.ListViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ListView Page">

    <!--  HasUnevenRows: calcula a altura da linha automaticamente (alturas nÃ£o uniformes)  -->
    <ListView
        x:Name="ctrlListView"
        HasUnevenRows="True"
        IsGroupingEnabled="True"
        IsPullToRefreshEnabled="True"
        ItemSelected="ctrlListView_ItemSelected"
        Refreshing="ctrlListView_Refreshing"
        SelectionMode="Single"
        SeparatorColor="Blue"
        SeparatorVisibility="Default">
        <ListView.Header>
            <Button
                x:Name="btnCarregarFilmes"
                BackgroundColor="DarkGray"
                Clicked="btnCarregarFilmes_Clicked"
                Text="Carregar Filmes" />
        </ListView.Header>
        <ListView.GroupHeaderTemplate>
            <DataTemplate>
                <ViewCell>
                    <VerticalStackLayout Padding="10" BackgroundColor="Orange">
                        <Label
                            FontAttributes="Bold"
                            FontSize="20"
                            Text="{Binding CompanyName}"
                            TextColor="White" />
                    </VerticalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.GroupHeaderTemplate>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <VerticalStackLayout Padding="10">
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="{Binding Name}" />
                        <Label Text="{Binding Description}" TextColor="Gray" />

                        <HorizontalStackLayout Margin="0,10,0,0">
                            <Label Margin="0,0,20,0" Text="{Binding LaunchYear}" />
                            <Label Text="{Binding Duration}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>