<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Lists.PickerListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PickerList Page">
    <VerticalStackLayout Padding="10">
        <Button
            x:Name="btnCarregarFilmes"
            BackgroundColor="DarkGray"
            Clicked="CarregarFilmes_Clicked"
            IsEnabled="True"
            Text="Carregar filmes" />
        <Button
            Margin="0,10,0,10"
            BackgroundColor="DarkOrange"
            Clicked="LimparSelecao_Clicked"
            Text="Limpar seleção" />
        <Picker
            x:Name="PickerList"
            Title="Filmes"
            SelectedIndexChanged="PickerList_SelectedIndexChanged" />
    </VerticalStackLayout>
</ContentPage>