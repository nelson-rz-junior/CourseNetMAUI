<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Lists.TableViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="TableView Page">
    <VerticalStackLayout>
        <TableView
            HasUnevenRows="False"
            Intent="Settings"
            RowHeight="70">
            <TableRoot>
                <TableSection Title="Segurança">
                    <EntryCell Label="PIN" />
                </TableSection>
                <TableSection Title="Backup">
                    <SwitchCell Text="Habilitar backup diário" />
                    <SwitchCell Text="Habilitar backup semanal" />
                    <SwitchCell Text="Habilitar backup mensal" />
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>